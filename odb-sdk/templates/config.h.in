#define STRINGIFY_(x) #x
#define STRINGIFY(x) STRINGIFY_(x)
#define ODBSDK_VERSION_STR \
    STRINGIFY(ODBSDK_VERSION_MAJOR) "." STRINGIFY(ODBSDK_VERSION_MINOR) "." STRINGIFY(ODBSDK_VERSION_PATCH)
